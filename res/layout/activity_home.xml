<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/StatusBar"
        >
        
        <TextView
            android:id="@+id/HappinessText"
            android:text="Happiness: 100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
        
        <TextView
            android:id="@+id/HungerText"
            android:text="Hunger 100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
        
        <TextView
            android:id="@+id/EnergyText"
            android:text="Energy Level > 9000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
        
    </LinearLayout>
    
    
    <com.example.phonepet.HomeView
	    android:id="@+id/HomeView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        
        >
        
        
    <ImageButton
        android:id="@+id/Accessorize"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/tshirt"
    	android:layout_marginLeft="4dp"
    	android:layout_marginRight="2dp"
    	android:layout_marginTop="2dp"
    	android:layout_marginBottom="2dp"
    	android:contentDescription="@string/shirt_button"
    />
    
    <ImageButton
        android:id="@+id/Feed"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/taco"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="2dp"
    	android:layout_marginTop="2dp"
    	android:layout_marginBottom="2dp"
    	android:contentDescription="@string/food_button"
    />
    
    <ImageButton
        android:id="@+id/Play"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/mikesoccerball"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="2dp"
    	android:layout_marginTop="2dp"
    	android:layout_marginBottom="2dp"
    	android:contentDescription="@string/play_button"
    	
    />
    
    <ImageButton
        android:id="@+id/Poop"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/pooper_scooper"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="2dp"
    	android:layout_marginTop="2dp"
    	android:layout_marginBottom="2dp"
    	android:contentDescription="@string/poop_button"
    />
    
    <ImageButton
        android:id="@+id/Sponge"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/sponge"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="4dp"
    	android:layout_marginTop="2dp"
    	android:layout_marginBottom="2dp"
    	android:contentDescription="@string/sponge_button"
    />
